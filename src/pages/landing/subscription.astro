const metadata = {
  title: 'Review Cleanup Subscription Service',
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Say Goodbye to Bad Reviews"
    title="Keep Your Online Reputation Spotless with Our Subscription Service"
    subtitle="Tired of negative reviews affecting your business? Sign up for our review cleanup service and maintain a perfect online reputation!"
    actions={[
      { variant: 'primary', text: 'Start Now', href: '/pricing', icon: 'tabler:square-rounded-arrow-right' },
      { text: 'Learn More', href: '#learn-more' },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1593510987046-1f8fcfc512a0?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Removing bad reviews image - clean and fresh reputation.',
    }}
  />

  <CallToAction
    title="Launch Your Journey to a Perfect Reputation"
    subtitle="Weâ€™re currently enhancing our platform for seamless user experience. Stay tuned for new updates and features!"
    actions={[
      {
        variant: 'primary',
