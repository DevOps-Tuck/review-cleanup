---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'clean-reviews — Reclaim Your Online Reputation with Expert Review Management',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Get Started',
        href: '#features',
        icon: 'tabler:rocket',
      },
      { text: 'Learn More', href: '#about' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'Clean Reviews Hero Image' }}
  >
    <Fragment slot="title">
      Clean Your Google Reviews <span class="hidden xl:inline"><br>Take control of your business reputation today.</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Clean-Reviews is a professional service dedicated to helping businesses manage, monitor, and enhance their online reputation.
        Protect your brand and attract more customers with better reviews.
      </span>
      <span class="block mb-1 sm:hidden font-bold text-blue-600">Take Charge of Your Digital Image.</span>
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->
  <Note />

  <!-- Features Widget *************** -->
  <Features
    id="features"
    tagline="Our Services"
    title="How We Help You Clean Up Google Reviews"
    subtitle="We offer a range of expert services designed to manage your online reputation."
    items={[
      {
        title: 'Review Monitoring',
        description:
          'Stay updated with comprehensive review tracking for all your online platforms, including Google.',
        icon: 'tabler:eye',
      },
      {
        title: 'Review Management',
        description:
          'Respond to reviews and resolve customer concerns quickly to enhance your online presence.',
        icon: 'tabler:settings',
      },
      {
        title: 'Generate Positive Reviews',
        description:
          'Increase your positive feedback through personalized strategies designed to motivate your happy customers to leave reviews.',
        icon: 'tabler:thumb-up',
      },
      {
        title: 'Reputation Analysis',
        description:
          'Get detailed insights into your online reputation and actionable strategies to improve it.',
        icon: 'tabler:chart-bar',
      },
      {
        title: 'Review Removal Assistance',
        description:
          'We provide guidance on how to handle unfair or inappropriate reviews and navigate the removal process.',
        icon: 'tabler:trash',
      },
      {
        title: 'SEO-Optimized Responses',
        description:
          'Craft thoughtful, SEO-friendly responses to reviews that enhance your brand and improve search visibility.',
        icon: 'tabler:seo',
      },
    ]}
  />

  <!-- Content Widget **************** -->
  <Content
    isReversed
    tagline="Our Mission"
    title="Why Clean-Reviews?"
    items={[
      {
        title: 'Personalized Approach',
        description:
          'We understand that every business is unique, and we tailor our review management strategies to your specific needs.',
      },
      {
        title: 'Proven Track Record',
        description:
          'With years of experience, we have helped countless businesses improve their online reputation and increase customer trust.',
      },
      {
        title: '24/7 Monitoring',
        description:
          'Rest assured, we are always keeping an eye on your reviews, even when you can’t.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
      alt: 'Review Monitoring Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Dedicated to Improving Your Business Reputation</h3>
      Our team focuses on restoring and enhancing your brand’s image through effective review management strategies.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->
  <Steps
    title="How It Works"
    items={[
      {
        title: 'Step 1: <span class="font-medium">Contact Us</span>',
        description:
          "Get in touch with us for an initial consultation. We’ll evaluate your current review landscape and propose a personalized plan.",
        icon: 'tabler:phone',
      },
      {
        title: 'Step 2: <span class="font-medium">Review Strategy</span>',
        description:
          'Our team will develop a custom strategy to help you manage and improve your online reviews, ensuring it aligns with your business goals.',
        icon: 'tabler:phone',
      },
      {
        title: 'Step 3: <span class="font-medium">Implementation</span>',
        description:
          'We take action by monitoring reviews, responding to feedback, and assisting in the removal of harmful content. You see the results.',
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1616198814651-e71f960c3180?ixlib=rb-4.0.3&auto=format&fit=crop&w=987&q=80',
      alt: 'Process Image',
    }}
  />

  <!-- Features2 Widget ************** -->
  <Features2
    title="Key Benefits"
    subtitle="How our services make a difference"
    tagline="Results-Driven Solutions"
    items={[
      {
        title: 'Improved Customer Trust',
        description: 'A better online reputation can lead to increased trust from potential customers, boosting your business.',
        icon: 'tabler:heart',
      },
      {
        title: 'Higher Search Rankings',
        description:
          'Better reviews lead to improved local search rankings, helping more customers find your business.',
        icon: 'tabler:search',
      },
      {
        title: 'Increased Revenue',
        description:
          'Happy customers leave positive reviews, which leads to more customers and ultimately higher sales.',
        icon: 'tabler:currency-dollar',
      },
    ]}
  />

  <!-- FAQs Widget ******************* -->
  <FAQs
    title="Frequently Asked Questions"
    subtitle="Learn more about our review management services"
    items={[
      {
        question: 'How do you monitor reviews?',
        answer: 'We use advanced tools to track reviews across all major platforms, including Google, Yelp, and Facebook.',
      },
      {
        question: 'Can you remove negative reviews?',
        answer: 'We assist in the review removal process for unfair or inappropriate reviews, but ultimately, platform policies apply.',
      },
      {
        question: 'How quickly can I see results?',
        answer: 'Results vary, but many clients see an improvement in their online reputation within the first few months.',
      },
    ]}
  />

  <!-- Call to Action Widget ********* -->
  <CallToAction
    title="Ready to Clean Up Your Google Reviews?"
    subtitle="Start enhancing your online reputation today."
    actionText="Contact Us"
    actionLink="#contact"
  />
</Layout>
