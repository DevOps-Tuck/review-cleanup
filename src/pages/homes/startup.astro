---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Features from '~/components/widgets/Features.astro';
import Stats from '~/components/widgets/Stats.astro';
import Features3 from '~/components/widgets/Features3.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Brands from '~/components/widgets/Brands.astro';

import { YouTube } from 'astro-embed';

const metadata = {
  title: 'Startup Landing Page',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Clean Reviews Demo"
    actions={[
      {
        variant: 'primary',
        target: '_blank',
        text: 'Get Started',
        href: 'https://your-reputation-site.com/start',
        icon: 'tabler:rocket',
      },
      { text: 'Learn more', href: '#features' },
    ]}
  >
    <Fragment slot="title">
      Enhance <span class="hidden sm:inline">and maintain</span> your <span
        class="text-accent dark:text-white highlight">online reputation</span
      > with Clean Reviews
    </Fragment>

    <Fragment slot="subtitle">
      Strengthen your digital presence with <span class="font-semibold">Clean Reviews</span>, a comprehensive solution to manage
      customer feedback, improve your brand’s credibility, and foster trust in your business.
    </Fragment>

    <Fragment slot="image">
      <YouTube id="clean_reviews_demo" title="Clean Reviews: Boost Your Online Reputation" />
      <style is:inline>
        lite-youtube {
          margin: 0 auto;
          max-width: 100%;
        }
      </style>
    </Fragment>
  </Hero>

  <!-- Features2 Widget ************** -->

  <Features2
    title="Who We Are"
    subtitle="At Clean Reviews, we believe in empowering businesses by helping them manage their online reviews with transparency and integrity. Our goal is to simplify the review management process while ensuring that your business thrives online with honest feedback."
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-green-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Stats Widget ****************** -->

  <Stats
    title="See the Difference Clean Reviews Makes"
    subtitle="Our platform has helped thousands of businesses improve their online reputation and increase customer trust."
    stats={[
      { title: 'Reviews Managed', amount: '200K' },
      { title: 'Positive Rating Increase', amount: '45%' },
      { title: 'Businesses Helped', amount: '15K' },
      { title: 'Satisfied Clients', amount: '98%' },
    ]}
  />

  <!-- Brands Widget ****************** -->

  <Brands
    title="Trusted by Leading Companies"
    subtitle="We collaborate with businesses of all sizes to help them manage their online reputation effectively."
    icons={[]}
    images={[
      {
        src: 'https://cdn.pixabay.com/photo/2015/05/26/09/37/paypal-784404_1280.png',
        alt: 'Paypal',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2021/12/06/13/48/visa-6850402_1280.png',
        alt: 'Visa',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2013/10/01/10/29/ebay-189064_1280.png',
        alt: 'Ebay',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2015/04/13/17/45/icon-720944_1280.png',
        alt: 'Youtube',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2013/01/29/22/53/yahoo-76684_1280.png',
        alt: 'Yahoo',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Our Services"
    subtitle="We offer powerful tools and services designed to make review management effortless."
    items={[
      {
        title: 'Review Aggregation',
        description: 'Consolidate customer feedback from multiple platforms into one easy-to-manage dashboard.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Real-time Notifications',
        description:
          'Receive instant updates whenever a new review is posted, allowing you to respond promptly.',
        icon: 'tabler:clock',
      },
      {
        title: 'Sentiment Analysis',
        description: 'Analyze the sentiment behind reviews to gauge how your customers truly feel about your brand.',
        icon: 'tabler:heart',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-green-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    title="Key Features of Clean Reviews"
    subtitle="Our platform is packed with features that help you take control of your online reputation."
    columns={3}
    items={[
      {
        title: 'Comprehensive Review Dashboard',
        description:
          'Monitor and manage reviews from all major platforms in one centralized location.',
        icon: 'tabler:dashboard',
      },
      {
        title: 'Automated Responses',
        description: 'Set up automated replies to quickly respond to customer feedback.',
        icon: 'tabler:message-circle',
      },
      {
        title: 'Customizable Reporting',
        description:
          'Generate reports that provide insights into customer sentiment and the impact of reviews on your business.',
        icon: 'tabler:report-analytics',
      },
      {
        title: 'Reputation Monitoring',
        description: 'Keep track of your overall online reputation and make data-driven decisions to improve it.',
        icon: 'tabler:eye',
      },
      {
        title: 'Review Widgets for Your Website',
        description: 'Showcase positive reviews on your website with customizable widgets.',
        icon: 'tabler:stars',
      },
    ]}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions"
    items={[
      {
        title: 'Why are online reviews important?',
        description:
          'Online reviews are crucial because they influence potential customers decisions, build trust, and enhance your brand’s credibility.',
      },
      {
        title: 'How does Clean Reviews help me manage reviews?',
        description:
          'Clean Reviews provides a centralized platform to view, respond to, and analyze feedback across various review sites.',
      },
      {
        title: 'Can I filter reviews based on rating?',
        description:
          'Yes, Clean Reviews allows you to filter reviews by rating, date, or platform, making it easier to prioritize feedback.',
      },
      {
        title: 'Does Clean Reviews offer analytics?',
        description:
          'Yes, our platform provides in-depth analytics on your reviews, including trends, customer sentiment, and areas for improvement.',
      },
      {
        title: 'Is there a mobile app for Clean Reviews?',
        description:
          'Yes, we offer a mobile app that lets you manage your reviews on the go, ensuring you never miss important feedback.',
      },
      {
        title: 'What platforms does Clean Reviews support?',
        description:
          'We support all major review platforms, including Google, Yelp, Facebook, and more.',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-green-50 dark:bg-transparent"></div>
    </Fragment>
  </FAQs>

  <!-- Features3 Widget ************** -->

  <Features3
    title="Get in Touch with Us"
    subtitle="Have any questions or need assistance? We're here to help you manage your online reputation."
    columns={4}
    items={[
      {
        title: 'Phone',
        icon: 'tabler:phone',
        callToAction: {
          target: '_blank',
          text: 'Call us',
          href: 'tel:+1234567890',
          variant: 'link',
        },
      },
      {
        title: 'Email',
        icon: 'tabler:mail',
        callToAction: {
          target: '_blank',
          text: 'Write to us',
          href: 'mailto:support@cleanreviews.com',
          variant: 'link',
        },
      },
      {
        title: 'Chat with sales',
        icon: 'tabler:message-circle',
        callToAction: {
          target: '_blank',
          text: 'Start chatting',
          href: '/chat-sales',
          variant: 'link',
        },
      },
      {
        title: 'Chat with support',
        icon: 'tabler:message-circle',
        callToAction: {
          target: '_blank',
          text: 'Start chatting',
          href: '/chat-support',
          variant: 'link',
        },
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        target: '_blank',
        text: 'Sign up for Clean Reviews',
        href: 'https://your-reputation-site.com/signup',
        icon: 'tabler:rocket',
      },
    ]}
  >
    <Fragment slot="title">Join Us in Enhancing Your Reputation</Fragment>

    <Fragment slot="subtitle">
      Let Clean Reviews help you build trust, enhance your brand, and stand out in a competitive marketplace.
    </Fragment>
  </CallToAction>
</Layout>
